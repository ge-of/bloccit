<h1><%= @sponsored.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @sponsoredpost.body %></p>
  </div>
  <div class="col-md-4">
<!-- #5 -->
    <%= link_to "New Sponsored Post", [@sponsoredpost.topic, @sponsoredpost], method: :new, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    <%= link_to "Edit", edit_topic_sponsoredpost_path(@sponsoredpost.topic, @post), class: 'btn btn-success' %>
    <%= link_to "Delete Sponsored Post", [@sponsoredpost.topic, @sponsoredpost], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
  </div>
</div>

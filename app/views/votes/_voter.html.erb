<% if current_user %>
  <div class="post-<%=@post.id%>">
    <div><%= link_to " ", post_up_vote_path(@post), remote: true, class: 'glyphicon glyphicon-chevron-up', method: :post %></div>
    <div><strong><%= post.points %></strong></div>
    <div><%= link_to " ", post_down_vote_path(@post), remote: true, class: 'glyphicon glyphicon-chevron-down', method: :post %></div>
  </div>
<% end %>
